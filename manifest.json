{
  "name": "DomFlags",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Add flags to the DOM using the 'DOMFLAG' attribute for a quick and easy way to inspect multiple elements.",
  "homepage_url": "http://lapier.me",
  "author": "Philip LaPier",
  "icons": {
    "16": "icons/icon16a.png",
    "48": "icons/icon48a.png",
    "128": "icons/icon128a.png"
  },
  "permissions": [ "tabs", "activeTab", "contextMenus" ],
  "devtools_page": "src/devtools/devtools.html",
  "background": {
    "persistent": true,
    "scripts": [
      "src/bg/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/inject.js"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    }
  ]
}
