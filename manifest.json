{
  "name": "DomFlags",
  "version": "1.2.0",
  "manifest_version": 2,
  "description": "Bookmarks for deeply nested dom elements",
  "homepage_url": "http://lapier.me",
  "author": "Philip LaPier",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [ "tabs", "activeTab", "storage", "http://localhost/*" ],
  "devtools_page": "src/devtools/devtools.html",
  "options_page": "src/options/options.html",
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "DomFlags Settings",
    "default_popup": "src/options/options.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "src/bg/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "js": [
        "js/jquery-2.1.0.min.js",
        "src/inject/inject.js"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/inject/inject.css"
  ],
  "commands": {
    "toggle_domflag": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Alt+Shift+D"
      },
      "description": "Add / Remove a DomFlag"
    },
    "0": {
      "suggested_key": {
        "default": "Alt+Shift+1",
        "mac": "Alt+Shift+1"
      },
      "description": "Inspect the 1st domflag"
    },
    "1": {
      "suggested_key": {
        "default": "Alt+Shift+2",
        "mac": "Alt+Shift+2"
      },
      "description": "Inspect the 2nd domflag"
    },
    "2": {
      "suggested_key": {
        "default": "Alt+Shift+3",
        "mac": "Alt+Shift+3"
      },
      "description": "Inspect the 3rd domflag"
    },
    "3": {
      "description": "Inspect the 4th domflag"
    },
    "4": {
      "description": "Inspect the 5th domflag"
    },
    "5": {
      "description": "Inspect the 6th domflag"
    },
    "6": {
      "description": "Inspect the 7th domflag"
    },
    "7": {
      "description": "Inspect the 8th domflag"
    },
    "8": {
      "description": "Inspect the 9th domflag"
    },
    "9": {
      "description": "Inspect the 10th domflag"
    }
  }
}
