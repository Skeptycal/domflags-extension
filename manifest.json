{
  "name": "DomFlags",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Create shortcuts to DOM elements you wish to inspect in the DevTools.",
  "homepage_url": "http://lapier.me",
  "author": "Philip LaPier",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [ "tabs", "activeTab", "contextMenus" ],
  "devtools_page": "src/devtools/devtools.html",
  "background": {
    "persistent": true,
    "scripts": [
      "src/bg/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/inject.js"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    }
  ]
}
